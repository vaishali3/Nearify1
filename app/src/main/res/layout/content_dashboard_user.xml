<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def7dd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.manan.d0ev.clubconnect.DashboardUserActivity"
    tools:showIn="@layout/app_bar_dashboard_user">

    <TextView
        android:id="@+id/tvFaltu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:text="Interests"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:id="@+id/hsv_clubs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFaltu"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/manan"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Coding"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/vividha"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Drama"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/ananya"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Literature"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/jhalak"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Photography"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/samarpan"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Techno"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/srijan"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Fine Arts"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/nataraja"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Dance"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/microbird"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Electronics"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/mechnext"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Mechanics"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/taranum"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_club"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Music"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hsv_clubs_name"

        android:scrollbars="none" />

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
